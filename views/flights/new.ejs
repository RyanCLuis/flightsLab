<%- include('../partials/header') %>

<h2>Enter a Flight!</h2>
<form action="/flights" method="POST">
    <label>Airline:
    <select name="airline">
        <option value="American" selected>American</option>
        <option value="Southwest">Southwest</option>
        <option value="Delta">Delta</option>
        <option value="United">United</option>
    </select>
    </label><br>
    <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    </label><br>
    <label>Flight Number
    <input type="text" name="flightNo" required
        pattern="^(1\d{1,3}|[2-9]\d{1,3}|9999)$">
    </select>
    </label><br>
    <label for = "departs"> Enter date and time of your flight:</label>
    <input 
    id="flight-date"
    type="datetime-local"
    name="departs"
    >
    </label><br>
    </label><br>
    <button type="submit">Add Flight</button>
</form>

<h2>Create a New Ticket for <%= flight.airline %> <%= flight.flightNo %></h2>

<form action="/flights/<%= flight._id %>/tickets" method="POST">
    <label for="seat">Seat:</label>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    
    <label for="price">Price:</label>
    <input type="number" name="price" required min="0">

    <button type="submit">Create Ticket</button>
</form>


